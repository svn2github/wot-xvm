<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    title="{resourceManager.getString('markers', 'Shadow')}">
    <fx:Script>
        <![CDATA[
            import utils.Macros;
        ]]>
    </fx:Script>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Size')}" id="v_size" config="shadow.size" minimum="0" maximum="10" stepSize="0.1" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Strength')}" id="v_strength" config="shadow.strength" minimum="0" maximum="5000" isLogarithmic="true" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Angle')}" id="v_angle" config="shadow.angle" minimum="0" maximum="359" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Distance')}" id="v_distance" config="shadow.distance" minimum="0" maximum="10" change="onChange(event)"/>
    <c:LabeledMacrosColorSelector label="{resourceManager.getString('markers', 'Color')}" toolTip="{resourceManager.getString('markers', 'DynamicColorTip')}" width="320" id="v_color" config="shadow.color" allowedMacros="{Macros.get('syscolors,colors_markers,colors_stat')}" change="onChange(event)"/>
    <c:LabeledMacrosNumberSelector label="{resourceManager.getString('markers', 'Transparency')}" id="v_alpha" config="shadow.alpha" minimum="0" maximum="100" allowedMacros="{Macros.get('transparency')}" change="onChange(event)"/>
</c:PanelComponent>
