<?xml version="1.0" encoding="utf-8"?>
<c:BorderContainerComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    width="100%" height="100%">
    <mx:Image right="5" y="5" width="16" height="16" source="@Embed(source='images/revert.png')" toolTip="{resourceManager.getString('panels', 'DefaultSettings')}" useHandCursor="true" buttonMode="true" click="onSetDefault(event)"/>
    <s:VGroup left="10" right="30" top="5" bottom="5" gap="-1">
        <c:LabeledColorSelector label="{resourceManager.getString('panels', 'LT')}" width="240" id="v_LT" config="colors.vtype.LT" change="onChange(event)"/>
        <c:LabeledColorSelector label="{resourceManager.getString('panels', 'MT')}" width="240" id="v_MT" config="colors.vtype.MT" change="onChange(event)"/>
        <c:LabeledColorSelector label="{resourceManager.getString('panels', 'HT')}" width="240" id="v_HT" config="colors.vtype.HT" change="onChange(event)"/>
        <c:LabeledColorSelector label="{resourceManager.getString('panels', 'SPG')}" width="240" id="v_SPG" config="colors.vtype.SPG" change="onChange(event)"/>
        <c:LabeledColorSelector label="{resourceManager.getString('panels', 'TD')}" width="240" id="v_TD" config="colors.vtype.TD" change="onChange(event)"/>
        <s:Spacer height="2"/>
        <c:LabeledCheckBox label="{resourceManager.getString('panels', 'usePremiumColor')}" id="v_usePremiumColor" config="colors.vtype.usePremiumColor" change="onChange(event)"/>
        <c:LabeledColorSelector label="{resourceManager.getString('panels', 'premium')}" width="240" id="v_premium" enabled="{v_usePremiumColor.value == true}" config="colors.vtype.premium" change="onChange(event)"/>
    </s:VGroup>
</c:BorderContainerComponent>
