<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	width="100%" height="210" title="Иконки игрока/клана">
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='images/cancel.png')" toolTip="Вернуть настройки по умолчанию" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledCheckBox label="Отображать иконки игрока/клана" id="v_show" config="statisticForm.clanIcon.show" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция X (слева)" id="v_x" config="statisticForm.clanIcon.x" minimum="-400" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция Y (слева)" id="v_y" config="statisticForm.clanIcon.y" minimum="-20" maximum="20" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция X (справа)" id="v_xr" config="statisticForm.clanIcon.xr" minimum="-400" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция Y (справа)" id="v_yr" config="statisticForm.clanIcon.yr" minimum="-20" maximum="20" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Ширина иконки" id="v_w" config="statisticForm.clanIcon.w" minimum="0" maximum="32" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Высота иконки" id="v_h" config="statisticForm.clanIcon.h" minimum="0" maximum="32" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Прозрачность" id="v_alpha" config="statisticForm.clanIcon.alpha" minimum="0" maximum="100" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
