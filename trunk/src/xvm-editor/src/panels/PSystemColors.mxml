<?xml version="1.0" encoding="utf-8"?>
<c:BorderContainerComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    width="100%" height="100%">
    <mx:Image right="5" y="5" width="16" height="16" source="@Embed(source='images/revert.png')" toolTip="{resourceManager.getString('panels', 'DefaultSettings')}" useHandCursor="true" buttonMode="true" click="onSetDefault(event)"/>
    <s:VGroup left="10" right="25" top="5" bottom="5" gap="2" variableRowHeight="true">
        <s:NavigatorContent width="100%" height="100%" id="syscolors">
            <s:Scroller width="100%" height="100%">
                <s:VGroup x="0" y="0" width="100%" height="100%" gap="-1">
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'ally_alive')}" width="240" id="v_ally_alive" config="colors.system.ally_alive" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'ally_dead')}" width="240" id="v_ally_dead" config="colors.system.ally_dead" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'ally_blowedup')}" width="240" id="v_ally_blowedup" config="colors.system.ally_blowedup" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'squadman_alive')}" width="240" id="v_squadman_alive" config="colors.system.squadman_alive" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'squadman_dead')}" width="240" id="v_squadman_dead" config="colors.system.squadman_dead" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'squadman_blowedup')}" width="240" id="v_squadman_blowedup" config="colors.system.squadman_blowedup" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'teamKiller_alive')}" width="240" id="v_teamKiller_alive" config="colors.system.teamKiller_alive" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'teamKiller_dead')}" width="240" id="v_teamKiller_dead" config="colors.system.teamKiller_dead" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'teamKiller_blowedup')}" width="240" id="v_teamKiller_blowedup" config="colors.system.teamKiller_blowedup" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'enemy_alive')}" width="240" id="v_enemy_alive" config="colors.system.enemy_alive" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'enemy_dead')}" width="240" id="v_enemy_dead" config="colors.system.enemy_dead" change="onChange(event)"/>
                    <c:LabeledColorSelector label="{resourceManager.getString('panels', 'enemy_blowedup')}" width="240" id="v_enemy_blowedup" config="colors.system.enemy_blowedup" change="onChange(event)"/>
                </s:VGroup>
            </s:Scroller>
        </s:NavigatorContent>
    </s:VGroup>
</c:BorderContainerComponent>
