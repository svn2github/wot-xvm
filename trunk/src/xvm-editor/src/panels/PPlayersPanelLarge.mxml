<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    title="{_('PPlayersPanelLarge')}">
    <fx:Script>
        <![CDATA[
            import utils.Macros;
        ]]>
    </fx:Script>
    <c:LabeledNumberSelector label="{_('PlayerNameWidth')}" id="v_width" config="playersPanel.large.width" minimum="0" maximum="250" change="onChange(event)"/>
    <c:LabeledMacrosTextInput label="{_('FormatPlayerNameLeft')}" labelWidth="100%" wrapTextField="true" height="40" id="v_nickFormatLeft" config="playersPanel.large.nickFormatLeft" allowedMacros="{Macros.get('panels,stats,colors_panels,colors_stat')}" preview="true" change="onChange(event)"/>
    <c:LabeledMacrosTextInput label="{_('FormatPlayerNameRight')}" labelWidth="100%" wrapTextField="true" height="40" id="v_nickFormatRight" config="playersPanel.large.nickFormatRight" allowedMacros="{Macros.get('panels,stats,colors_panels,colors_stat')}" preview="true" change="onChange(event)"/>
    <c:LabeledMacrosTextInput label="{_('FormatVehicleNameLeft')}" labelWidth="100%" wrapTextField="true" height="40" id="v_vehicleFormatLeft" config="playersPanel.large.vehicleFormatLeft" allowedMacros="{Macros.get('panels,stats,colors_panels,colors_stat')}" preview="true" change="onChange(event)"/>
    <c:LabeledMacrosTextInput label="{_('FormatVehicleNameRight')}" labelWidth="100%" wrapTextField="true" height="40" id="v_vehicleFormatRight" config="playersPanel.large.vehicleFormatRight" allowedMacros="{Macros.get('panels,stats,colors_panels,colors_stat')}" preview="true" change="onChange(event)"/>
</c:PanelComponent>
