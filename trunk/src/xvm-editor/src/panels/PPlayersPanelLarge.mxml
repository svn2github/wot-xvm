<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	width="100%" height="230" title="Режим ушей 'large' - широкие уши в игре">
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='cancel.png')" toolTip="Вернуть настройки по умолчанию" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledNumberSelector label="Ширина имени игрока" id="v_width" config="playersPanel.large.width" minimum="0" maximum="250" change="onChange(event)"/>
		<c:LabeledTextInput label="Формат левого поля имени игрока" labelWidth="100%" wrapTextField="true" height="40" id="v_nickFormatLeft" config="playersPanel.large.nickFormatLeft" change="onChange(event)"/>
		<c:LabeledTextInput label="Формат правого поля имени игрока" labelWidth="100%" wrapTextField="true" height="40" id="v_nickFormatRight" config="playersPanel.large.nickFormatRight" change="onChange(event)"/>
		<c:LabeledTextInput label="Формат левого поля названия танка" labelWidth="100%" wrapTextField="true" height="40" id="v_vehicleFormatLeft" config="playersPanel.large.vehicleFormatLeft" change="onChange(event)"/>
		<c:LabeledTextInput label="Формат правого поля названия танка" labelWidth="100%" wrapTextField="true" height="40" id="v_vehicleFormatRight" config="playersPanel.large.vehicleFormatRight" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
