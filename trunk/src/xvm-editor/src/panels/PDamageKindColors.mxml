<?xml version="1.0" encoding="utf-8"?>
<c:BorderContainerComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    width="100%" height="100%">
    <mx:Image right="5" y="5" width="16" height="16" source="@Embed(source='images/revert.png')" toolTip="{resourceManager.getString('panels', 'DefaultSettings')}" useHandCursor="true" buttonMode="true" click="onSetDefault(event)"/>
    <s:HGroup left="10" right="25" top="10" bottom="10">
        <s:Scroller width="100%" height="100%">
            <s:VGroup id="container" width="100%" height="100%" gap="-1">
              <c:LabeledColorSelector label="{resourceManager.getString('panels', 'attack')}" width="240" id="v_attack" config="colors.dmg_kind.attack" change="onChange(event)"/>
              <c:LabeledColorSelector label="{resourceManager.getString('panels', 'fire')}" width="240" id="v_fire" config="colors.dmg_kind.fire" change="onChange(event)"/>
              <c:LabeledColorSelector label="{resourceManager.getString('panels', 'ramming')}" width="240" id="v_ramming" config="colors.dmg_kind.ramming" change="onChange(event)"/>
              <c:LabeledColorSelector label="{resourceManager.getString('panels', 'world_collision')}" width="240" id="v_world_collision" config="colors.dmg_kind.world_collision" change="onChange(event)"/>
              <c:LabeledColorSelector label="{resourceManager.getString('panels', 'other')}" width="240" id="v_other" config="colors.dmg_kind.other" change="onChange(event)"/>
            </s:VGroup>
        </s:Scroller>
    </s:HGroup>
</c:BorderContainerComponent>
