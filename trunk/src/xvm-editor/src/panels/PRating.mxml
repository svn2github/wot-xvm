<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	width="100%" height="80" title="{resourceManager.getString('panels', 'PRating')}">
	<fx:Metadata>
		[ResourceBundle("panels")]
	</fx:Metadata>
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='images/cancel.png')" toolTip="{resourceManager.getString('panels', 'DefaultSettings')}" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledCheckBox label="{resourceManager.getString('panels', 'showPlayersStatistics')}" id="v_showPlayersStatistics" config="rating.showPlayersStatistics" change="onChange(event)"/>
		<c:LabeledCheckBox label="{resourceManager.getString('panels', 'loadEnemyStatsInFogOfWar')}" id="v_loadEnemyStatsInFogOfWar" config="rating.loadEnemyStatsInFogOfWar" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
