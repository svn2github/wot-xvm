<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:validators="validators.*"
		 xmlns:utils="utils.*"
		 verticalAlign="middle"
		 gap="-1">
	<fx:Script>
		<![CDATA[
			private static function toHex(v:Number):String
			{
				return ("00000" + v.toString(16).toUpperCase()).substr(-6);
			}

			protected var _value:Number;
			[Bindable]
			public function get value():String
			{
				return !isNaN(_value) ? "0x" + toHex(_value) : null;
			}
			public function set value(v:String):void
			{
				_value = Number(v);
				c.text = !isNaN(_value) ? "#" + toHex(_value) : "";
				c.validateNow();
				cp.selectedColor = _value;
			}

			protected function onChange(event:Event):void
			{
				value = (event.target == cp) ? cp.selectedColor.toString() : "0x" + c.text.substr(1);
				dispatchEvent(new Event(Event.CHANGE));
			}
		]]>
	</fx:Script>
	<fx:Metadata>
		[Event(name="change", type="flash.events.Event")]
	</fx:Metadata>
	<fx:Declarations>
		<validators:TextColorValidator required="true" source="{c}" property="text" valid="onChange(event)"/>
	</fx:Declarations>
	<s:TextInput x="72" y="72" id="c" width="100%" restrict="#0-9A-Fa-f" change="c.validateNow()"/>
	<mx:ColorPicker x="132" y="72" id="cp" change="onChange(event)"/>
</s:HGroup>
