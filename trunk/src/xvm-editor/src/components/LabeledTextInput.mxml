<?xml version="1.0" encoding="utf-8"?>
<c:LabeledComponent xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*">
    <fx:Script>
        // wrapTextField
        [Bindable]
        public var wrapTextField: Boolean = false;
    </fx:Script>
    <s:TextInput left="{wrapTextField ? 0 : labelWidth}" right="0" bottom="0" height="{wrapTextField ? height/2 : height}"
        id="edit" text="{value}" change="value=edit.text; onChange(event);"/>
</c:LabeledComponent>
