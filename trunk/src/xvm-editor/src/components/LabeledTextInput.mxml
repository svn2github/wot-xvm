<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
	    xmlns:s="library://ns.adobe.com/flex/spark"
	    xmlns:mx="library://ns.adobe.com/flex/mx"
		width="100%"
		height="20"
		borderVisible="false">
	<fx:Script>
		// label
		private var _label: String = "";

		[Bindable]
		public function get label(): String
		{
			return _label;
		}
		public function set label(value: String): void
		{
			_label = value;
		}

		// labelWidth
		protected var _labelWidth: String = "140";

		[Bindable]
		public function get labelWidth(): String
		{
			return _labelWidth;
		}
		public function set labelWidth(value: String): void
		{
			_labelWidth = value;
		}

		// wrapTextField
		protected var _wrapTextField: Boolean = false;
		
		[Bindable]
		public function get wrapTextField(): Boolean
		{
			return _wrapTextField;
		}
		public function set wrapTextField(value: Boolean): void
		{
			_wrapTextField = value;
		}

		// onChange
		protected function onChange(event:Event):void
		{
			dispatchEvent(new Event(Event.CHANGE));
		}
	</fx:Script>
	<fx:Metadata>
		[Event(name="change", type="flash.events.Event")]
	</fx:Metadata>
	<s:Label x="0" text="{label}" width="{labelWidth}" height="{wrapTextField ? height/2 : height}" verticalAlign="middle"/>
	<s:TextInput left="{wrapTextField ? 0 : labelWidth}" right="0" bottom="0" height="{wrapTextField ? height/2 : height}" change="onChange(event)"/>
</s:BorderContainer>
