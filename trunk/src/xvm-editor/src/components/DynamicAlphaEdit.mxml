<?xml version="1.0" encoding="utf-8"?>
<c:LabeledComponent xmlns:fx="http://ns.adobe.com/mxml/2009"
	    xmlns:s="library://ns.adobe.com/flex/spark"
	    xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:c="components.*"
		width="100%" height="22">
	<fx:Script>
		[Bindable]
		public function get v_value():*
		{
			return value.value;
		}
		public function set v_value(v:*): void
		{
			value.value = v;
		}
		
		[Bindable]
		public function get v_alpha():*
		{
			return value.alpha;
		}
		public function set v_alpha(v:*): void
		{
			value.alpha = v;
		}
	</fx:Script>
	<fx:Metadata>
		[Event(name="click", type="flash.events.MouseEvent")]
	</fx:Metadata>
	<s:HGroup width="100%" height="100%" verticalAlign="middle">
		<s:Label text="{label}" width="{labelWidth}"/>
		<s:NumericStepper width="100" minimum="{minimum}" maximum="{maximum}"
			id="valueEdit" value="{v_value}" change="v_value=valueEdit.value; onChange(event)"/>
		<s:HSlider width="100%" minimum="0" maximum="100" toolTip="{v_alpha}"
			id="alphaEdit" value="{v_alpha}" change="v_alpha=alphaEdit.value; onChange(event)"/>
		<mx:Image width="16" height="16" id="del" source="@Embed(source='images/delete.png')" toolTip="Удалить строку" useHandCursor="true" buttonMode="true"/>
		<mx:Image width="16" height="16" id="add" source="@Embed(source='images/add.png')" toolTip="Вставить строку" useHandCursor="true" buttonMode="true"/>
	</s:HGroup>
</c:LabeledComponent>
