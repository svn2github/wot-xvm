	</fx:Script>
	<fx:Metadata>
		[Event(name="change", type="flash.events.Event")]
	</fx:Metadata>
	<s:Label x="0" text="{label}" width="{labelWidth}" height="{wrapTextField ? height/2 : height}" verticalAlign="middle"/>
	<s:TextInput left="{wrapTextField ? 0 : labelWidth}" right="0" bottom="0" height="{wrapTextField ? height/2 : height}" change="onChange(event)" id="edit"/>
