<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    height="100%"
    title="{resourceManager.getString('markers', 'VehicleClass')}">
    <c:LabeledCheckBox label="{resourceManager.getString('markers', 'Visible')}" id="v_visible" config="visible" change="onChange(event)"/>
    <c:LabeledCheckBox label="{resourceManager.getString('markers', 'ShowSpeaker')}" id="v_showSpeaker" config="showSpeaker" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'XPosition')}" id="v_x" config="x" minimum="-100" maximum="100" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'YPosition')}" id="v_y" config="y" minimum="-100" maximum="100" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Transparency')}" id="v_alpha" config="alpha" minimum="0" maximum="100" change="onChange(event)"/>
    <!--<c:LabeledMacrosColorSelector label="{resourceManager.getString('markers', 'Color')}" width="320" id="v_color" config="color" change="onChange(event)"/>-->
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'MaxScale')} (%)" id="v_maxScale" config="maxScale" minimum="0" maximum="200" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'ScaleOffsetX')}" id="v_scaleX" config="scaleX" minimum="-100" maximum="100" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'ScaleOffsetY')}" id="v_scaleY" config="scaleY" minimum="-100" maximum="100" change="onChange(event)"/>
</c:PanelComponent>
