<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	title="Шрифт" width="100%" height="100%">
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='cancel.png')" toolTip="Вернуть настройки по умолчанию" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledFontSelector label="Название шрифта" id="v_name"/>
		<c:LabeledNumberSelector label="Размер" id="v_size" minimum="0" maximum="50" change="onChange(event)"/>
		<c:LabeledAlignSelector label="Выравнивание" width="250" id="v_align"/>
		<c:LabeledCheckBox label="Жирный" id="v_bold" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
