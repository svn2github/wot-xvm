<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	title="{resourceManager.getString('markers', 'Font')}" width="100%" height="100%">
	<fx:Metadata>
		[ResourceBundle("markers")]
	</fx:Metadata>
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='images/revert.png')" toolTip="{resourceManager.getString('markers', 'DefaultSettings')}" useHandCursor="true" buttonMode="true" click="onSetDefault(event)"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledFontSelector label="{resourceManager.getString('markers', 'FontName')}" id="v_name" config="font.name" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Size')}" id="v_size" config="font.size" minimum="0" maximum="50" change="onChange(event)"/>
		<c:LabeledAlignSelector label="{resourceManager.getString('markers', 'Align')}" width="250" id="v_align" config="font.align" change="onChange(event)"/>
		<c:LabeledCheckBox label="{resourceManager.getString('markers', 'Bold')}" id="v_bold" config="font.bold" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
