<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	title="{resourceManager.getString('markers', 'Shadow')}" width="100%" height="175">
	<fx:Metadata>
		[ResourceBundle("markers")]
	</fx:Metadata>
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='images/cancel.png')" toolTip="{resourceManager.getString('markers', 'DefaultSettings')}" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Size')}" id="v_size" config="shadow.size" minimum="0" maximum="10" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Strength')}" id="v_strength" config="shadow.strength" minimum="0" maximum="9999" sliderVisible="false" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Angle')}" id="v_angle" config="shadow.angle" minimum="0" maximum="359" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Distance')}" id="v_distance" config="shadow.distance" minimum="0" maximum="10" change="onChange(event)"/>
		<c:LabeledColorSelector label="{resourceManager.getString('markers', 'Color')}" width="260" id="v_color" config="shadow.color" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Transparency')}" id="v_alpha" config="shadow.alpha" minimum="0" maximum="100" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
