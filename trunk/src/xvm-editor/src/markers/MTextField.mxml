<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	xmlns:m="markers.*"
	title="{resourceManager.getString('markers', 'TextField')}: {v_name.value}" width="100%" height="190">
	<fx:Metadata>
		[ResourceBundle("markers")]
	</fx:Metadata>
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='images/cancel.png')" toolTip="{resourceManager.getString('markers', 'DefaultSettings')}" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledCheckBox label="{resourceManager.getString('markers', 'Visible')}" id="v_visible" config="visible" change="onChange(event)"/>
		<c:LabeledTextInput label="{resourceManager.getString('markers', 'Name')}" id="v_name" config="name" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'XPosition')}" id="v_x" config="x" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'YPosition')}" id="v_y" config="y" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Transparency')}" id="v_alpha" config="alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledColorSelector label="{resourceManager.getString('markers', 'Color')}" width="260" id="v_color" config="color" change="onChange(event)"/>
		<c:LabeledTextInput label="{resourceManager.getString('markers', 'TextFormat')}" id="v_format" config="format" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
