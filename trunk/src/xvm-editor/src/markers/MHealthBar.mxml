<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	title="Уровень здоровья" width="100%" height="380">
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='cancel.png')" toolTip="Вернуть настройки по умолчанию" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<s:CheckBox label="Показывать" selected="true" id="v_visible" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция по оси X" id="v_x" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция по оси Y" id="v_y" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Прозрачность" id="v_alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledColorSelector label="Цвет" width="250" id="v_color" change="onChange(event)"/>
		<c:LabeledColorSelector label="Цвет 2 (градиент)" width="250" id="v_lcolor" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Ширина" id="v_width" minimum="0" maximum="200" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Высота" id="v_height" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Прозрачность заливки" id="v_fill_alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledColorSelector label="Цвет фона" width="250" id="v_border_color" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Прозрачность фона" id="v_border_alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Размер рамки" id="v_border_size" minimum="0" maximum="10" change="onChange(event)"/>
		<c:LabeledColorSelector label="Цвет урона" width="250" id="v_damage_color" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Прозрачность урона" id="v_damage_alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Время анимации урона" id="v_damage_fade" minimum="0" maximum="10" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
