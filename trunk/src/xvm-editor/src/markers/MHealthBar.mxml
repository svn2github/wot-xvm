<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	title="{resourceManager.getString('markers', 'HealthBar')}" width="100%" height="380">
	<fx:Metadata>
		[ResourceBundle("markers")]
	</fx:Metadata>
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='images/cancel.png')" toolTip="{resourceManager.getString('markers', 'DefaultSettings')}" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledCheckBox label="{resourceManager.getString('markers', 'Visible')}" id="v_visible" config="visible" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'XPosition')}" id="v_x" config="x" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'YPosition')}" id="v_y" config="y" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Transparency')}" id="v_alpha" config="alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledColorSelector label="{resourceManager.getString('markers', 'Color')}" width="260" id="v_color" config="color" change="onChange(event)"/>
		<c:LabeledColorSelector label="{resourceManager.getString('markers', 'Color2')}" width="260" id="v_lcolor" config="lcolor" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Width')}" id="v_width" config="width" minimum="0" maximum="200" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'Height')}" id="v_height" config="height" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'BorderSize')}" id="v_border_size" config="border.size" minimum="0" maximum="10" change="onChange(event)"/>
		<c:LabeledColorSelector label="{resourceManager.getString('markers', 'BgColor')}" width="260" id="v_border_color" config="border.color" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'BgTransparency')}" id="v_border_alpha" config="border.alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'FillTransparency')}" id="v_fill_alpha" config="fill.alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledColorSelector label="{resourceManager.getString('markers', 'DamageColor')}" width="260" id="v_damage_color" config="damage.color" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'DamageTransparency')}" id="v_damage_alpha" config="damage.alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="{resourceManager.getString('markers', 'DamageFadeTime')}" id="v_damage_fade" config="damage.fade" minimum="0" maximum="10" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
