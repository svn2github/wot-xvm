<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:c="components.*"
	title="Наносимый урон" width="100%" height="235">
	<mx:Image right="5" y="-18" width="16" height="16" source="@Embed(source='cancel.png')" toolTip="Вернуть настройки по умолчанию" useHandCursor="true" buttonMode="true"/>
	<s:VGroup left="10" right="10" top="10" bottom="10" gap="2" variableRowHeight="true">
		<c:LabeledCheckBox label="Показывать" id="v_visible" config="visible" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция по оси X" id="v_x" config="x" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Позиция по оси Y" id="v_y" config="y" minimum="-100" maximum="100" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Прозрачность" id="v_alpha" config="alpha" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledColorSelector label="Цвет" width="250" id="v_color" config="color" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Время отображения" id="v_speed" config="speed" minimum="0" maximum="10" change="onChange(event)"/>
		<c:LabeledNumberSelector label="Расстояние" id="v_maxRange" config="maxRange" minimum="0" maximum="100" change="onChange(event)"/>
		<c:LabeledTextInput label="Текст при уроне" id="v_damageMessage" config="damageMessage" change="onChange(event)"/>
		<c:LabeledTextInput label="Текст при взрыве БК" id="v_blowupMessage" config="blowupMessage" change="onChange(event)"/>
	</s:VGroup>
</c:PanelComponent>
