<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    title="{resourceManager.getString('markers', 'DamageText')} *"
    toolTip="{resourceManager.getString('markers', 'DamageTextTip')}">
    <fx:Script>
        <![CDATA[
            import utils.Macros;
        ]]>
    </fx:Script>
    <c:LabeledCheckBox label="{resourceManager.getString('markers', 'Visible')}" id="v_visible" config="visible" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'XPosition')}" id="v_x" config="x" minimum="-200" maximum="200" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'YPosition')}" id="v_y" config="y" minimum="-100" maximum="100" change="onChange(event)"/>
    <c:LabeledMacrosNumberSelector label="{resourceManager.getString('markers', 'Transparency')}" id="v_alpha" config="alpha" minimum="0" maximum="100" allowedMacros="{Macros.get('transparency')}" change="onChange(event)"/>
    <c:LabeledMacrosColorSelector label="{resourceManager.getString('markers', 'Color')}" toolTip="{resourceManager.getString('markers', 'DynamicColorTip')}" width="320" id="v_color" config="color" allowedMacros="{Macros.get('syscolors,colors_markers_damage,colors_stat')}" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'DisplayTime')}" id="v_speed" config="speed" minimum="0" maximum="10" change="onChange(event)"/>
    <c:LabeledNumberSelector label="{resourceManager.getString('markers', 'MoveRange')}" id="v_maxRange" config="maxRange" minimum="0" maximum="100" change="onChange(event)"/>
    <c:LabeledMacrosTextInput label="{resourceManager.getString('markers', 'DamageMessage')}" id="v_damageMessage" config="damageMessage" allowedMacros="{Macros.get('markers_damage,stats,colors_markers_damage,colors_stat')}" change="onChange(event)"/>
    <c:LabeledMacrosTextInput label="{resourceManager.getString('markers', 'BlowupMessage')}" id="v_blowupMessage" config="blowupMessage" allowedMacros="{Macros.get('markers_damage,stats,colors_markers_damage,colors_stat')}" change="onChange(event)"/>
</c:PanelComponent>
