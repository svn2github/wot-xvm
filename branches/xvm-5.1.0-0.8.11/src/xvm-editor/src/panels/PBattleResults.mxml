<?xml version="1.0" encoding="utf-8"?>
<c:PanelComponent
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:c="components.*"
    title="{_('PBattleResults')}">
    <c:LabeledNumberSelector label="{_('startPage')}" labelWidth="180" id="v_startPage" config="battleResults.startPage" minimum="1" maximum="3" change="onChange(event)"/>
    <c:LabeledCheckBox label="{_('showNetIncome')}" id="v_showNetIncome" config="battleResults.showNetIncome" change="onChange(event)"/>
    <c:LabeledCheckBox label="{_('showExtendedInfo')}" id="v_showExtendedInfo" config="battleResults.showExtendedInfo" change="onChange(event)"/>
    <c:LabeledCheckBox label="{_('showTotals')}" id="v_showTotals" config="battleResults.showTotals" change="onChange(event)"/>
    <c:LabeledCheckBox label="{_('showChances')}" id="v_showChances" config="battleResults.showChances" change="onChange(event)"/>
    <c:LabeledCheckBox label="{_('showBattleTier')}" id="v_showBattleTier" config="battleResults.showBattleTier" change="onChange(event)"/>
</c:PanelComponent>
